<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme with NEW Color Scheme -->
    <style name="Theme.FridgeFairy" parent="Theme.Material3.Light">
        <!-- Primary brand color (Modern Green) -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryVariant">@color/primary_dark</item>
        <item name="colorOnPrimary">@color/text_on_primary</item>

        <!-- Secondary brand color (Vibrant Orange) -->
        <item name="colorSecondary">@color/secondary</item>
        <item name="colorSecondaryVariant">@color/secondary_dark</item>
        <item name="colorOnSecondary">@color/text_on_secondary</item>

        <!-- Background colors -->
        <item name="android:colorBackground">@color/background</item>
        <item name="colorSurface">@color/surface</item>
        <item name="colorOnSurface">@color/text_on_surface</item>

        <!-- Status bar color -->
        <item name="android:statusBarColor">@color/primary_dark</item>
        <item name="android:navigationBarColor">@color/background</item>

        <!-- Error color -->
        <item name="colorError">@color/error</item>

        <!-- Text appearances -->
        <item name="android:textColorPrimary">@color/text_primary</item>
        <item name="android:textColorSecondary">@color/text_secondary</item>
        <item name="android:textColorHint">@color/text_hint</item>

        <!-- Widget styles -->
        <item name="materialButtonStyle">@style/Widget.App.Button</item>
        <item name="materialCardViewStyle">@style/Widget.App.CardView</item>
        <item name="textInputStyle">@style/Widget.App.TextInputLayout</item>

        <!-- Bottom Navigation -->
        <item name="bottomNavigationStyle">@style/Widget.App.BottomNavigation</item>
    </style>

    <!-- NoActionBar variant -->
    <style name="Theme.FridgeFairy.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <!-- AppBar Overlay -->
    <style name="Theme.FridgeFairy.AppBarOverlay" parent="ThemeOverlay.Material3.Dark">
        <item name="android:textColorPrimary">@color/white</item>
        <item name="android:textColorSecondary">@color/white</item>
        <item name="actionMenuTextColor">@color/white</item>
        <item name="colorControlNormal">@color/white</item>
        <item name="android:background">@color/primary</item>
    </style>

    <!-- Popup Overlay -->
    <style name="Theme.FridgeFairy.PopupOverlay" parent="ThemeOverlay.Material3.Light" />

    <!-- Custom Button Style -->
    <style name="Widget.App.Button" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/primary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom Button - Secondary -->
    <style name="Widget.App.Button.Secondary" parent="Widget.Material3.Button">
        <item name="android:textColor">@color/white</item>
        <item name="backgroundTint">@color/secondary</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">sans-serif-medium</item>
    </style>

    <!-- Custom Button - Outlined -->
    <style name="Widget.App.Button.Outlined" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:textColor">@color/primary</item>
        <item name="strokeColor">@color/primary</item>
        <item name="strokeWidth">2dp</item>
        <item name="cornerRadius">8dp</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <!-- Custom Card Style -->
    <style name="Widget.App.CardView" parent="Widget.Material3.CardView.Elevated">
        <item name="cardBackgroundColor">@color/card_background</item>
        <item name="cardCornerRadius">12dp</item>
        <item name="cardElevation">4dp</item>
        <item name="contentPadding">16dp</item>
    </style>

    <!-- Custom TextInputLayout Style -->
    <style name="Widget.App.TextInputLayout" parent="Widget.Material3.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/primary</item>
        <item name="hintTextColor">@color/primary</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="boxCornerRadiusTopStart">8dp</item>
        <item name="boxCornerRadiusTopEnd">8dp</item>
        <item name="boxCornerRadiusBottomStart">8dp</item>
        <item name="boxCornerRadiusBottomEnd">8dp</item>
    </style>

    <!-- Custom Bottom Navigation Style -->
    <style name="Widget.App.BottomNavigation" parent="Widget.Material3.BottomNavigationView">
        <item name="itemIconTint">@color/nav_item_color</item>
        <item name="itemTextColor">@color/nav_item_color</item>
        <item name="android:background">@color/surface</item>
        <item name="elevation">8dp</item>
    </style>

    <!-- Rounded Corner Image -->
    <style name="RoundedCornerImage" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">12dp</item>
    </style>

    <!-- Floating Action Button -->
    <style name="Widget.App.FloatingActionButton" parent="Widget.Material3.FloatingActionButton.Primary">
        <item name="backgroundTint">@color/secondary</item>
        <item name="tint">@color/white</item>
        <item name="elevation">6dp</item>
    </style>

    <!-- Toolbar Style -->
    <style name="Widget.App.Toolbar" parent="Widget.Material3.Toolbar">
        <item name="android:background">@color/primary</item>
        <item name="titleTextColor">@color/white</item>
        <item name="subtitleTextColor">@color/white</item>
        <item name="android:theme">@style/ThemeOverlay.Material3.Dark</item>
    </style>

    <!-- Dialog Theme -->
    <style name="Theme.App.Dialog" parent="Theme.Material3.Light.Dialog">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorSecondary">@color/secondary</item>
        <item name="android:windowBackground">@color/surface</item>
        <item name="buttonBarPositiveButtonStyle">@style/Widget.App.Button</item>
    </style>

    <!-- Chip Style -->
    <style name="Widget.App.Chip" parent="Widget.Material3.Chip.Filter">
        <item name="chipBackgroundColor">@color/primary_light</item>
        <item name="chipStrokeColor">@color/primary</item>
        <item name="chipStrokeWidth">1dp</item>
        <item name="android:textColor">@color/primary_dark</item>
        <item name="checkedIconTint">@color/primary</item>
    </style>

    <!-- TabLayout Style -->
    <style name="Widget.App.TabLayout" parent="Widget.Material3.TabLayout">
        <item name="tabIndicatorColor">@color/secondary</item>
        <item name="tabSelectedTextColor">@color/primary</item>
        <item name="tabTextColor">@color/text_secondary</item>
        <item name="android:background">@color/surface</item>
    </style>

    <!-- Switch Style -->
    <style name="Widget.App.Switch" parent="Widget.Material3.CompoundButton.Switch">
        <item name="thumbTint">@color/primary</item>
        <item name="trackTint">@color/primary_light</item>
    </style>

</resources>